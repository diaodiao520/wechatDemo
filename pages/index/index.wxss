.nav {
    width: 750rpx;
    height: 300rpx;
  }
  
  .icon {
    width: 100rpx;
    height: 100rpx;
  }
  .icon-list {
    height: 240rpx; 
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
  }
  .icon-list view {
      font-size: 12px;
      text-align: center;
    display: flex;
    flex-direction: column;
  }
  /* 列表 */
  .list,.list2 {
      font-size: 14px;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #fff;
    /* display: flex; */
  }
  .list-nav {
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx;
  }
  .list-item{
    display: flex;
    margin-top: 10rpx;
  }
  .list-item-left {
    width: 420rpx;
    height: 186rpx;
  }
  .list-item-left image{
    width: 100%;
    height: 100%;
  }
  
  .list-item-right {
    font-size: 12px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .list-item-right view:last-child {
    display: flex;
    justify-content: space-between;
  }

  .list-main,.list2-nav{
      display: flex;
      padding: 10rpx 10rpx;
      justify-content: space-between;
  }

  .list-main-left{
    width: 330rpx;
    height: 196rpx;
    margin-right: 30rpx;
  }

  .list-main-right{
    width: 350rpx;
    height: 196rpx;
  }

  .list-main-top{
      font-size: 13px;
  }

  .list-main-min{
      font-size: 10px;
      margin-top: 35rpx;
      color: #ccc;
  }

  .list-main-bottom{
    font-size: 10px;
    display: flex;
    margin-top: 40rpx;
    justify-content: space-between;
  }

  .list-main-bottom-r{
      color:red;
      
  }

  .list2-main{
      display: flex;
      justify-content: space-between;
      /* padding:5rpx; */
  }

  .list2-main-left{
      width: 330rpx;
      height: 300rpx;
      /* margin-right: 5rpx; */
      /* background: red; */
  }

  .list2-main-right{
    width: 330rpx;
    height: 300rpx;
    /* margin-right: 5rpx; */
    /* background: red; */
}

  .list2-main-left-t image,.list2-main-right-t image {
    width: 330rpx;
    height: 196rpx; 
  }

  .list2-main-left-m,.list2-main-right-m{
    font-size: 15px;
    margin-top: 10rpx;
  }

  .list2-main-left-b,.list2-main-right-b{
      display: flex;
      justify-content: space-between;
      margin-top: 10rpx;
  }

  .list2-main-left-b-r,.list2-main-right-b-r{
